// Cart Alert
$cart-alert-height: 40px;
.cart-add-alert-body {
  margin-top: $cart-alert-height;
}
.cart-add-alert {
  background: $highlight;
  line-height: $cart-alert-height;
  position: fixed;
  top: 0; left: 0; right: 0;
  text-align: center;
  z-index: 10000;
  a {
    display: inline-block;
    background-color: $black;
    line-height: $cart-alert-height - 10px;
    margin: 5px 0 5px 5px;
    padding: 0 8px;
    color: $white;
    font-weight: bold;
    cursor: pointer;
    &:hover {
      background-color: $gray;
    }
  }
}


// Shoe Builder ------------------------------------------------------
.shoe-builder {
  margin-top: 20px;
  position: relative;
  @include transition(all 1s);
  @include transition-delay(1s);
  &.show {
    visibility: visible !important;
    opacity: 1 !important;
  }
  .badge {
    background: #E95F5F;
    display: block;
    width: 40px;
    height: 40px;
    font-size: 9px;
    line-height: 9px;
    padding-top: 11px;
    text-transform: uppercase;
    border-radius: 100%;
    text-align: center;
    color: #fff;
    font-weight: 700;
    float: right;
  }
  h2 {
    font-size: 20px;
    line-height: 1.4em;
    text-transform: uppercase;
  }
  .photo-ctr {
    .views {
      text-align: center;
      span {
        width: 10px;
        height: 10px;
        display: inline-block;
        background: $gray-light;
        text-indent: -5000px;
        border-radius: 50%;
        margin: 10px;
        &.selected {
          background: $main-color;
        }
        &:hover {
          background: $accent-color;
          cursor: pointer;
        }
      }
    }
  }
  .photo {
    position: relative;
    width: 100%;
    height: 300px; // temp... need dynamic?
    span {
      position: absolute;
      top: 0; bottom: 0;
      left: 0; right: 0;
      background-size: contain;
      background-position: center top;
      background-repeat: no-repeat;
      @include transition(all .5s);
    }
    .shoe-photo {
      z-index: 1;
    }
    .saddle-photo {
      z-index: 2;
    }
    .laces-photo {
      z-index: 3;
    }
  }
  .mobile-options-toggle {
    border: 2px solid $black;
    line-height: 40px;
    text-align: center;
    font-weight: bold;
    &:hover {
      cursor: pointer;
    }

  }
  .options {
    background-color: $gray-lightest;
    padding: 10px;
    display: none;
    h2, .meta {
      line-height: 25px;
      font-size: 12px;
    }
    h2 {
      text-transform: uppercase;
      font-weight: bold;
    }
    .meta {
      float: right;
      text-transform: capitalize;
      margin-right: 6px;
    }
    ul {
      margin: 0 0 10px;
    }
  }
  .color-options {
    ul {
      overflow: hidden;
    }
    li {
      float: left;
    }
    div {
      width: 20px;
      height: 20px;
      margin: 0 6px 6px 0;
      background: #eee;
      border: 1px solid #eee;
      text-indent: -5000px;
      &:hover {
        cursor: pointer;
      }
    }
  }
  .jumpstart-selector {
    background-color: $white;
    select {
      width: 100%;
      border-radius: 0;
    }
  }
  .shoe-details {
    h2 {
      display: none;
    }
    .btn {
      display: block;
      width: 100%;
      color: $black;
      border-color: $black;
      text-align: center;
      &:hover {
        color: $white;
        background: $black;
      }
      &.btn--disabled {
        color: $gray;
        border-color: $gray;

      }
    }
    .cart-options {
      margin-bottom: 40px;
      a {
        background-color: $gray-lightest;
        padding: 10px;
        color: $black;
        display: block;
        i {
          width: 20px;
        }
        em {
          font-size: 12px;
          font-style: normal;
          color: $gray;
          display: block;
          margin-left: 20px;
        }
        &:hover {
          background-color: $gray-light;
        }
      }
    }
    .description {
      a {
        color: $black;
        &:hover {
          text-decoration: underline;
        }
      }
    }
  }
  .shoe-price {
    font-size: 20px;
    margin-bottom: 20px;
    font-family: Montserrat,sans-serif;
    em {
      font-size: 14px;
      color: $gray;
      font-style: normal;
    }
  }
  #AddToCartBuilder {
    position: relative;
    .alert {
      display: none;
      position: absolute;
      line-height: 20px;
      padding: 0 10px;
      bottom: -22px;
      font-size: 12px;
      left: -2px;
      right: -2px;
      background: $highlight;
      font-family: $font-family;
    }
    &.btn--disabled {
      margin-bottom: 20px;
      .alert {
        display: block;
      }
    }
  }
}

// Responsive
@media all and (min-width: 420px) {
// Tablet & Up
.shoe-builder {
  .shoe-details h2 {
    display: block;
  }
  .mobile-options-toggle {
    display: none;
  }
  .options {
    background-color: transparent;
    padding: 0;
    display: block;
    margin-bottom: 20px;
    overflow: hidden;
    h2 {
      border-top: 1px solid $border-color;
    }
  }
  .view-01 { overflow: hidden; }
  .view-01 .laces-photo, .view-01 .shoe-photo, .view-01 .saddle-photo {
    margin-top: -50px;
  }

}

// End Tablet & Up
}

@media all and (min-width: 769px) {
// Desktop & Up
.shoe-builder {
  .options {
    max-width: 235px;
  }
  .photo {
    height: 400px; // temp... need dynamic?
  }
}


// End Desktop & Up
}